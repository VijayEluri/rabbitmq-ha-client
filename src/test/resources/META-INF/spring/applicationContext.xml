<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="connectionFactory" class="net.joshdevins.rabbitmq.client.ha.ConnectionFactory">
        <constructor-arg value="devins-ubuntu-vm01, devins-ubuntu-vm02" />
    </bean>

    <bean id="channelFactory" class="net.joshdevins.rabbitmq.client.SimpleChannelFactory">
        <constructor-arg ref="connectionFactory" />
    </bean>

    <bean id="template" class="net.joshdevins.rabbitmq.client.ha.RabbitMqTemplate">
        <constructor-arg ref="channelFactory" />
    </bean>

</beans>
